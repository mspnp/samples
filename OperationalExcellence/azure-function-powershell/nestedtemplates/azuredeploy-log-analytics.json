{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string"
        },
        "functionKey": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "name": "[parameters('workspaceName')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-03-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Free"
                },
                "features": {
                    "searchVersion": 1
                }
            }
        },
        {
            "name": "[concat(parameters('workspaceName'), '/WindowsEvents')]",
            "type": "Microsoft.OperationalInsights/workspaces/dataSources",
            "apiVersion": "2015-11-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
            ],
            "kind": "WindowsEvent",
            "properties": {
                "eventLogName": "System",
                "eventTypes": [
                    {
                        "eventType": "Error"
                    },
                    {
                        "eventType": "Warning"
                    },
                    {
                        "eventType": "Information"
                    }
                ]
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
            "apiVersion": "2020-03-01-preview",
            "name": "[concat(parameters('workspaceName'), '/91192b47-5f04-4215-a142-1fcb2b1622b1')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
            ],
            "properties": {
                "Category": "event",
                "DisplayName": "eventniner",
                "Query": "Event\n| where EventLog == 'System' and EventID == 7036 and Source == 'Service Control Manager'\n| parse kind=relaxed EventData with * '<Data Name=\"param1\">' ServiceName '</Data><Data Name=\"param2\">' ServiceState '</Data>' *\n| where ServiceName == 'Windows Update'\n| where ServiceState == 'stopped'\n| where TimeGenerated > now() - 5m\n| project Computer, ServiceName, ServiceState, TimeGenerated",
                "Version": 2
            }
        },
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "actionGroupTest",
            "location": "Global",
            "dependsOn": [
                "[resourceId('microsoft.operationalinsights/workspaces', parameters('workspaceName'))]"
            ],
            "properties": {
                "groupShortName": "emailService",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "email_-EmailAction-",
                        "emailAddress": "nepeters@microsoft.com",
                        "useCommonAlertSchema": false
                    }
                ],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": [
                    {
                        "name": "restart-service-function-action",
                        "functionAppResourceId": "[resourceId('Microsoft.Web/sites', parameters('workspaceName'))]",
                        "functionName": "restart-windows-service",
                        //"httpTriggerUrl": "https://wksp009.azurewebsites.net/api/restart-windows-service?code=V15AdHLH5ecmlLDR5SMraVloXKj7mXCdACDUmW4cWrG2aPiuLkLxEA==",
                        "httpTriggerUrl": "[concat(parameters('workspaceName'), '.azurewebsites.net/api/', 'restart-windows-service', '?code=', parameters('functionKey'))]",
                        "useCommonAlertSchema": true
                    }
                ]
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "failed-windows-update",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('microsoft.operationalinsights/workspaces', parameters('workspaceName'))]",
                "[resourceId('microsoft.insights/actionGroups', 'actionGroupTest')]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "Event\n| where EventLog == 'System' and EventID == 7036 and Source == 'Service Control Manager'\n| parse kind=relaxed EventData with * '<Data Name=\"param1\">' ServiceName '</Data><Data Name=\"param2\">' ServiceState '</Data>' *\n| where ServiceName == 'Windows Update'\n| where ServiceState == 'stopped'\n| where TimeGenerated > now() - 5m\n| project Computer, ServiceName, ServiceState\n",
                    "authorizedResources": [],
                    "dataSourceId": "[resourceId('microsoft.operationalinsights/workspaces', parameters('workspaceName'))]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[resourceId('microsoft.insights/actionGroups', 'actionGroupTest')]"
                        ]
                    },
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        }
    ],
    "outputs": {
        "workSpaceID": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', parameters('WorkspaceName')), '2015-03-20').customerId]"
        },
        "workSpaceKey": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', parameters('WorkspaceName')), '2015-03-20').primarySharedKey]"
        },
        "workSpaceResourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
        }
    }
}