{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environments": {
            "defaultValue": [
                "KnownGood"
            ],
            "type": "array",
            "metadata": {
                "description": "Array with the names for the environment slots"
            },
            "maxLength": 19
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "python|3.7",
            "metadata": {
                "description": "The Runtime stack of current web app"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "webAppName": "[uniqueString(subscription().subscriptionId, resourceGroup().id)]",
        "webAppPortalName": "[concat(variables('webAppName'), '-webapp')]",
        "appServicePlanName": "[concat('AppServicePlan-', variables('webAppName'))]",
        "sku": "S1",
        "repoUrl": "https://github.com/neilpeterson/python-docs-hello-world.git",
        "prod-slot": "broken-production",
        "known-good-slot": "master"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-11-01",
            "name": "[variables('appServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[variables('sku')]"
            },
            "kind": "linux",
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('webAppPortalName')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('webAppPortalName'), '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('webAppPortalName'))]"
            ],
            "properties": {
                "repoUrl": "[variables('repoUrl')]",
                "branch": "[variables('prod-slot')]",
                "isManualIntegration": true,
                "isGitHubAction": "false",
                "deploymentRollbackEnabled": true,
                "isMercurial": false
            }
        },
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Web/sites/slots",
            "name": "[concat(variables('webAppPortalName'), '/', parameters('environments')[copyIndex()])]",
            "kind": "app",
            "location": "[parameters('location')]",
            "comments": "This specifies the web app slots.",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/Sites', variables('webAppPortalName'))]"
            ],
            "copy": {
                "name": "webPortalSlot",
                "count": "[length(parameters('environments'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/slots/sourcecontrols",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('webAppPortalName'), '/', parameters('environments')[copyIndex()], '/web')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/slots', variables('webAppPortalName'), parameters('environments')[copyIndex()])]"
            ],
            "properties": {
                "repoUrl": "[variables('repoUrl')]",
                "branch": "[variables('known-good-slot')]",
                "isManualIntegration": true,
                "isGitHubAction": "false",
                "deploymentRollbackEnabled": true,
                "isMercurial": false
            },
            "copy": {
                "name": "webPortalSlot",
                "count": "[length(parameters('environments'))]"
            }
        },
        {
            "name": "aks-cluster",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('aks-template')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ]
}